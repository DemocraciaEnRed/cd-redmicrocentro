.ext-footer
  margin-top 30px
  font-size 1em
  border-top: 1px solid rgba(0, 0, 0, 0.1)
  background: white

  .footer-1
    padding 60px 0
    max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    justify-content space-between
  
  .footer-2
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    justify-content space-between
    height: 48px;
    background: #AADCED;

  .desarrollo
    display: flex
    margin-top: 7px
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    justify-content space-between

  .derechos
    margin-top: 8px

  .institutional
    flex-grow 2

    p
      max-width 560px
  a
    color $main-link-color
    font-weight 400
    &:hover
      color $main-link-color-hover
      text-decoration underline

  .logo
    span
      display block
      color #aaa
      &:hover
        opacity 1

  .gob
    padding-right 30px
    margin-bottom 30px

    img
      max-width 100%

  .menu
    padding 0 15px
    text-align left

    &:first-of-type
      flex-grow 3

    a
      display block
      padding 6px 0

  @media only screen and (max-width: 687px)
    .footer-1
      flex-direction column
      flex-wrap wrap
      padding 0 10px

    .menu
      padding-right 0
      a
        display block
        line-height 1em

    .gob
      img
        width 300px

    .institutional
      padding 0 15px
