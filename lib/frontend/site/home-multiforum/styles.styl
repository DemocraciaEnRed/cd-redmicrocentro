@import './forum-container/styles.styl'
@import './search/styles.styl'
@import './search/results-search/styles.styl'

.jumbotron_body
  padding: 50px 0 !important
  .container
    .lead
      font-size:18px
      margin-top: 5px
      &.highlight
        font-size:18px
        font-weight: 400
        text-shadow: none !important
      span
        color:$main-color
    .participar
      margin-top: 1rem
      margin: 10px;
      background-color: $main-color;
    img
      height: 190px
      @media (max-width: 992px)
        height: 100px
      

.ext-site-home-multiforum
  background: transparent

  .forums-list
    display: flex
    flex-direction: column
    flex-wrap: wrap
    padding-top: 1em

    .forums-list-title
      font-size: 35px
      text-align: center
      font-weight: 500
      margin-bottom: 20px

    .forums-list-item
      max-width: 100%
      width: 100%
      margin: 0 10px 20px

      @media (min-width: 992px)
        width: 440px

  .cover
    text-align: center
    min-height: 60vh!important
    display: flex!important
    flex-direction: row!important
    flex-wrap: wrap!important
    align-items: center!important
    justify-content: center!important
    vertical-align: middle!important

    h1
      max-width: 500px
      margin: 0 auto .3em

  .arrow-down
    background-size: cover
    background-repeat: no-repeat
    display: inline-block
    margin-top: 0
    margin-right: 3%
    width: 70px
    height: 55px
    margin-bottom:20px
    @media screen and (max-width: 750px)
      width: 40px
      height: 30px
      margin-top:25px

  .lead-paragraph
    margin-top: 1.5em
    text-align: center
    font-size: 20px
    padding-left: 5%;
    padding-right: 5%;
    &.last
      color: $main-color
      font-weight:bold
      flex-direction:column
      justify-content:center

    .bold {
      font-weight: 400
    }

    .skyblue {
      color: $primary-color
      text-transform: uppercase;
    }

    .explain 
      color: $main-color;
      text-align: center;
      font-family: Open Sans;
      font-style: normal;
      font-weight: 700;
      line-height: 26px; /* 130% */    

  .arrow
    text-align:center



  .section-icons
    font-weight:600
    margin-top:20px
    .section-icon
      display: flex;
      padding: 20px 20px;
      flex-direction: column;
      align-items: center;
      gap: 20px;    
      border-radius: 10px;
      background-color: #FFF
      box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.35);   
      @media (max-width: 760px)
        display:flex
        flex-direction:column
      .icon
        width: 120px;
        height: 120px;
      .text
        padding-top: 10px
        text-align center
        text-transform uppercase
        font-weight: 100
        font-size: 14px

  .icon-arrow-down
    font-size: 20px
    color: $main-color
    cursor: pointer

  .content-center
    display: flex;
    align-self: center;

    .btn
    .dropdown-element
    .dropbtn
      min-width:130px
      border-radius: 5000px;
      font-size:13px !important
      padding: 10px!important

    .btn-secondary
      min-width:200px
      border: 1px solid #000;
      background: transparent

    .btn-active
      min-width:200px
      text-underline: none
      background-color: $secondary-color
      color: $main-color
      &:focus
        outline: none

.dropbtn
  width:150px
  font-size:16px !important
.dropdown-element
  @media (max-width: 700px)
    position: relative
    display: inline-block

.small-arrow
  font-size:9px !important

.show-more
  height: 50px

#consultas
  background-image: url(/lib/frontend/site/home-multiforum/background-lleca.jpg)
  background-position: center
  background-repeat: repeat-y
  // background-repeat: no-repeat
  background-size: cover

#call-to-action
  background-image: url(/lib/frontend/site/home-multiforum/background-lineas.png)
  background-position: center
  background-repeat: no-repeat
  // background-repeat: no-repeat
  background-size: cover  
  